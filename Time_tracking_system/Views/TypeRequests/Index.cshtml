@model List<Time_tracking_system.Domain.ViewModels.TypeRequestVM>

@{
    ViewData["Title"] = "Типы заявок";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Типы заявок</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Создать</a>
</p>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            @(i+1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Name)
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@Model[i].Id">Подробнее</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
