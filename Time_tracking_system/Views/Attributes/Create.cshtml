@model Time_tracking_system.Domain.ViewModels.AttributesVM

@{
    ViewData["Title"] = "Создание нового атрибута заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание нового атрибута заявки</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameAttributes" class="control-label"></label>
                <input asp-for="NameAttributes" class="form-control" placeholder="Название атрибута заявки" />
                <span asp-validation-for="NameAttributes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeData" class="control-label"></label>
                <select asp-for="TypeData" class="form-control">
                    <option value="TypeVocation">Тип отпуска из списка</option>
                    <option value="Employee">Пользователь из списка</option>
                    <option value="Bool">Да/нет</option>
                    <option value="DateTime">Дата</option>
                    <option value="Text">Текст</option>
                </select>
                <span asp-validation-for="TypeData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="Index">
                    <i class="fa fa-arrow-left"></i> Назад
                </a>
                <input type="submit" value="Создать" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

