@model List<Time_tracking_system.Domain.ViewModels.TypeVocationVM>

@{
    ViewData["Title"] = "Типы отпусков";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Типы отпусков</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @(i+1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model[i].Name)
                </td>
            </tr>
        }
    </tbody>
</table>
